<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:id="@+id/do1" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/white" android:background="@android:color/holo_red_dark"
            android:gravity="center" android:text="@string/do1"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/re" app:layout_constraintHorizontal_chainStyle="spread"/>
    <TextView
            android:text="@string/re"
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:id="@+id/re" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="24dp" android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:gravity="center" android:textColor="@android:color/white"
            android:background="@android:color/holo_orange_dark" app:layout_constraintStart_toEndOf="@+id/do1"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/mi"/>
    <TextView
            android:text="@string/mi"
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:id="@+id/mi" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="32dp" android:background="@android:color/holo_orange_light"
            android:gravity="center" android:textColor="@android:color/white"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" app:layout_constraintStart_toEndOf="@+id/re"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/fa"/>
    <TextView
            android:text="@string/fa"
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:id="@+id/fa" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="40dp" android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:background="@android:color/holo_green_light" android:gravity="center"
            android:textColor="@android:color/white" app:layout_constraintStart_toEndOf="@+id/mi"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/sol"/>
    <TextView
            android:text="@string/sol"
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:id="@+id/sol"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="48dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="48dp" android:background="@android:color/holo_blue_light"
            android:gravity="center" android:textColor="@android:color/white"
            app:layout_constraintStart_toEndOf="@+id/fa" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/la"/>
    <TextView
            android:text="@string/ls"
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:id="@+id/la" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="56dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="56dp" android:background="@android:color/holo_blue_dark"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:gravity="center"
            android:textColor="@android:color/white" app:layout_constraintStart_toEndOf="@+id/sol"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/si"
            app:layout_constraintHorizontal_chainStyle="packed" app:layout_constraintVertical_chainStyle="packed"/>
    <TextView
            android:text="@string/si"
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:id="@+id/si" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="64dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="64dp" android:background="@android:color/holo_purple"
            android:gravity="center" android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/white" app:layout_constraintStart_toEndOf="@+id/la"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/do2"/>
    <TextView
            android:text="@string/do2"
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:id="@+id/do2" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="72dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="72dp" android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:background="@android:color/holo_red_dark" android:gravity="center"
            android:textColor="@android:color/white" app:layout_constraintStart_toEndOf="@+id/si"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>